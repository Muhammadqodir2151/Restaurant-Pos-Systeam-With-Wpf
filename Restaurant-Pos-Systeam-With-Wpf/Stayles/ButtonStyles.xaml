                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="T" Property="Background" Value="#9C9C9C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    

<UserControl x:Class="Restaurant_Pos_Systeam_With_Wpf.Components.Tables.TableSelectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Pos_Systeam_With_Wpf.Components.Tables"
             mc:Ignorable="d" 
             Height="188" 
             Width="208"
             MouseDown="TableUserControl_MouseDown"
             Background="Transparent">
    <Border BorderBrush="#787C80"
            BorderThickness="1"
            Margin=" 5 5 5 5"
            Background="{DynamicResource PraymiryBackround}"

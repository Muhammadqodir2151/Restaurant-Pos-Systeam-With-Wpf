                       Width="180"
                        Height="40">
                    <Border >
                        <Label Content="Table:"
                       HorizontalAlignment="Left"
                       Margin="5 5 0 0"
                       FontSize="16">

                        </Label>
                    </Border>
                    <Border Margin="0 5 5 5">
                        <Label Content=""
                           x:Name="tablenum"
                       HorizontalAlignment="Right"
                       
                       FontSize="16">

                        </Label>
                    </Border>
                    <Border >
                        <Label Content="Capasty:"
                       HorizontalAlignment="Left"
                       Margin="0 5 0 0"
                       FontSize="16">

                        </Label>
                    </Border>
                    <Border Margin="0 5 5 5">
                        <Label Content=""
                           x:Name="tablCapasty"

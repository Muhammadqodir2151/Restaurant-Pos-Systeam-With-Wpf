<UserControl x:Class="Restaurant_Pos_Systeam_With_Wpf.Components.Items.ItemsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Pos_Systeam_With_Wpf.Components.Items"
             mc:Ignorable="d" 
             
             Cursor="Hand"
             MouseDoubleClick="UserControl_MouseDoubleClick"
             >
             
    <Border Margin="5 5 5 5"
            BorderBrush="Black"
            BorderThickness="0.5"
            CornerRadius="10"
            Background="#FEFEFE"
            x:Name="ItemComponent">
        <StackPanel Height="280"
                    Width="220">
    
            <Border Height="160"
                    Width="160"
                    Margin="5 20 5 5"
                    CornerRadius="100"
                    >
                <Border.Background>
                    <ImageBrush x:Name="itemImage"
                                Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            <StackPanel>

                <Label Height="40"
                   Margin="5 5 5 5"
                   Width="120"
                   HorizontalContentAlignment="Center"
                   Content="32"
                   FontSize="21"
                   x:Name="lbItemName"
                   Foreground="Black">
                
            </Label>
            <Label Margin="5 5 5 5"
                   Content="3513"
                   FontSize="21"
                   Height="40"
                   HorizontalContentAlignment="Center"
                   Width="120"
                   x:Name="lbitemPrise"
                   Foreground="Yellow">
                
            </Label>
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>

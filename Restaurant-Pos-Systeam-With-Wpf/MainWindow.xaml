<Window x:Class="Restaurant_Pos_Systeam_With_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_Pos_Systeam_With_Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" 
        Height="800" Width="1300"
        Background="Azure">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*">

            </ColumnDefinition>

            <ColumnDefinition Width="4*">

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="4"
                Background="White">
            <Grid Grid.Column="0" Background="Azure">

                <Grid.RowDefinitions>
                    <RowDefinition Height="6*">

                    </RowDefinition>
                    <RowDefinition Height="6*">

                    </RowDefinition>
                    <RowDefinition Height="6*">

                    </RowDefinition>
                    <RowDefinition Height="35*">

                    </RowDefinition>

                    <RowDefinition Height="19*">

                    </RowDefinition>
                    <RowDefinition Height="6*">

                    </RowDefinition>
                </Grid.RowDefinitions>
                <Border BorderBrush="#787C80"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="{DynamicResource SecondaryBackround}">
                    <Grid Background="Transparent">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*">

                            </ColumnDefinition>
                            <ColumnDefinition Width="1*">

                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1" Margin="5 5 5 5"
                          HorizontalAlignment="Right"
                          Width="200">
                            <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*">
                                            
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="*">

                                        </ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <TextBlock Grid.Column="0" x:Name="dateTextBlock" FontSize="16" 
                                   HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="1" x:Name="timeTextBlock" FontSize="24"
                                   HorizontalAlignment="Right"/>
                            </StackPanel>

                        </Grid>
                        <Grid Grid.Column="0" Margin="1"
                          HorizontalAlignment="Right"
                          Width="200">
                            <Label  Margin="10 0"
                           Content="Able Dev"
                           FontSize="25"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"/>
                            <Label Margin="25 5 0 5"
                           Content="Pos Systeam"
                                   
                           FontSize="15"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"/>


                        </Grid>
                    </Grid>
                </Border>
                <Grid Grid.Row="1"
                  Background="Transparent">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Border Margin="5 5 5 5"
                            Height="50"
                            Background="Yellow"
                            CornerRadius="10"/>
                    </Grid>
                    <StackPanel Grid.Column="1">
                        <Border Margin="5 5 5 5"
                            Height="50"
                            CornerRadius="10"
                            Background="Brown"/>
                    </StackPanel>

                </Grid>
                <Grid Grid.Row="2"
                  Background="Transparent">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Border Margin="5 5 5 5"
                            Height="50"
                            Background="Yellow"
                            CornerRadius="10"/>
                    </Grid>
                    <StackPanel Grid.Column="1">
                        <Border Margin="5 5 5 5"
                            Height="50"
                            CornerRadius="10"
                            Background="Brown"/>
                    </StackPanel>

                </Grid>
                <Grid Grid.Row="3">
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>-->
                    
                    <Border Grid.Column="3" 
                            BorderBrush="#787C80" 
                            BorderThickness="1"
                            CornerRadius="5">
                        <DataGrid ItemsSource="{Binding YourDataItems}">
                            <DataGrid.Columns>
                                <!-- Ustunlar -->
                                <DataGridTextColumn Header="Item name"
                                                    Binding="{Binding Property1}"
                                                    Width="3*"/>
                                
                                <DataGridTextColumn Header="Price" 
                                                    Binding="{Binding Property2}"
                                                    Width="2*"/>
                                <DataGridTextColumn Header="Qty" 
                                                    Binding="{Binding Property2}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Amount" 
                                                    Binding="{Binding Property2}"
                                                    Width="2*"/>
                                <!-- Qo'shimcha ustunlar -->
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                </Grid>
                <Grid Grid.Row="4">
                    
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                          Background="Red"
                          Margin="5"
                          CornerRadius="5">
                        
                    </Border>
                </Grid>


            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="65">

                </RowDefinition>
                <RowDefinition Height="*">

                </RowDefinition>
                <RowDefinition Height="60">

                </RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" >
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="0.35*">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                        Background="{DynamicResource SecondaryBackround}"
                        Margin="5,5,0,5"
                        BorderThickness="1"
                            CornerRadius="5"
                        BorderBrush="#787C80">
                        <Label  Margin="0,-5,0,0"
                           Content="Order"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">

                        </Label>
                    </Border>
                    <Border Grid.Column="1"
                       Background="{DynamicResource SecondaryBackround}"
                        Margin="5,5,0,5"
                        BorderThickness="1"
                            CornerRadius="5"
                        BorderBrush="#787C80">
                        <Label  Margin="0,-5,0,0"
                           Content="Order"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">

                        </Label>
                    </Border>
                    <Border Grid.Column="2"
                        Background="{DynamicResource SecondaryBackround}"
                        Margin="5,5,0,5"
                        BorderThickness="1"
                            CornerRadius="5"
                        BorderBrush="#787C80">
                        <Label  Margin="0,-5,0,0"
                           Content="Order"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">

                        </Label>
                    </Border>
                    <Border Grid.Column="3"
                        Background="{DynamicResource SecondaryBackround}"
                        Margin="5,5,0,5"
                        BorderThickness="1"
                            CornerRadius="5"
                        BorderBrush="#787C80">
                        <Label  Margin="0,-5,0,0"
                           Content="Order"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">

                        </Label>
                    </Border>

                    <Button Grid.Column="4"
                            Margin="0 5"
                            x:Name="btnClose"
                            Click="btnClose_Click"
                            Style="{DynamicResource CloseButton}"/>

                </Grid>
            </StackPanel>

            <Grid Grid.Row="1">
                <Border Margin="5 5 5 5"
                    Background="{DynamicResource SecondaryBackround}"
                    BorderThickness="1"
                    BorderBrush="Black">

                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
